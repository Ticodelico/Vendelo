<div id="<%= dom_id menu %>">
  <% if action_name != "show" %>
    <%= link_to "Show this menu", menu, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this menu', edit_menu_path(menu), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
