  <header>
     <nav
        class="
          flex flex-wrap
          items-center
          justify-between
          w-full
          py-4
          md:py-0
          px-4
          text-lg text-gray-800
        dark:bg-gray-900 
        "
      >
       <div> <%=link_to products_path, class: "text-fuchsia-50 hover:text-fuchsia-400" do%>
        <h1>Sex Shop</h1>
        <% end %>
        </div>
       
       <div class="hidden w-full md:flex md:items-center md:w-auto" id="menu">
          <ul
            class="
              pt-4
              text-base text-gray-700
              md:flex
              md:justify-between 
              md:pt-0"
          >
            <li>
              <%= link_to t('.add'), new_product_path, class: "md:p-4 py-2 block hover:text-fuchsia-400 text-fuchsia-600", data: { turbo_frame: "modal" } if Current.user %>
            </li>
            <li>
            <%= link_to t('.categories'), categories_path, class: "md:p-4 py-2 block hover:text-fuchsia-400 text-fuchsia-600" if Current.user %>
            </li>
            <li>
            <%= link_to t('.login'), new_session_path, class: "md:p-4 py-2 block hover:text-fuchsia-400 text-fuchsia-600" unless Current.user %>
            </li>
            <li>
            <%= link_to t('.register'), new_user_path, class: "md:p-4 py-2 block hover:text-fuchsia-400 text-fuchsia-600" unless Current.user %>
            </li>
            <li>
              <%= link_to t('.logout'), session_path(Current.user.id), data: {
              turbo_method: :delete,
              turbo_confirm: t('common.confirm')
            }, class: "md:p-4 py-2 block hover:text-sky-800 text-sky-400" if Current.user %>
            </li>

          </ul>
        </div>
    </nav>
  </header>
  


